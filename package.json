  "bugs": {
    "url": "https://github.com/younes-barhouni/react-lib-rollup-setup/issues"
  },
  "homepage": "https://github.com/younes-barhouni/react-lib-rollup-setup#readme",
  "publishConfig": {
    "access": "public"
  }
}
