{
  "name": "react-lib-rollup-setup",
  "version": "0.0.1",
  "description": "Minimal React library using Rollup",
  "main": "lib/index.js",
  "module": "es/index.js",
  "style": "dist/index.css",
  "typings": "lib/index.d.ts",
  "files": [
    "dist",
    "es",
    "lib"
  ],
  "scripts": {
    "clean": "rm -rf dist && rm -rf es && rm -rf lib",
    "prebuild": "npm run clean",
    "prefix": "cross-env NODE_ENV=production postcss dist/index.css -o dist/index.css",
    "copy:less": "copyfiles -u 1 src/**/*.less src/**/**/*.less es",
    "js:cjs": "cross-env BABEL_ENV=cjs babel src -d lib --extensions '.ts,.tsx'",
    "js:esm": "cross-env BABEL_ENV=esm babel src -d es --extensions '.ts,.tsx'",
    "build:types": "tsc -p tsconfig.build.json",
    "build": "npm run js:cjs && npm run js:esm && npm run build:types",
    "build:css": "lessc src/styles/index.less dist/index.css && npm run prefix && npm run copy:less",
    "build:umd": "cross-env BABEL_ENV=umd rollup -c",
    "build:publish": "npm run build && npm run build:umd",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "demo": "cross-env BABEL_ENV=demo rollup -c rollup.conf.demo.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/node": "^7.17.10",
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@babel/runtime": "^7.16.3",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^11.2.7",
    "@types/dompurify": "^2.3.1",
    "@types/jest": "^26.0.24",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "autoprefixer": "^10.4.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.10",
    "eslint": "^7.27.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-compat": "^3.13.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.27.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jest": "^26.6.3",
    "less": "^4.1.2",
    "postcss": "^8.3.11",
    "postcss-cli": "^8.3.1",
    "rollup": "^2.75.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-copy-merge": "^0.2.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-scss": "3",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.52.1",
    "ts-jest": "^26.5.6",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "keywords": [
    "React-library",
    "react",
    "Rollup",
    "react-component",
    "setup",
    "minimal"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/younes-barhouni/react-lib-rollup-setup.git"
  },
  "author": "Younes barhouni <younesbarhouni@live.com> (https://github.com/younes-barhouni)",
